<h1>Signup</h1>
<%= form_for @user do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label 'Height (in inches)' %>
<%= f.number_field :height %>
<%= f.label 'How happy are you? (scale 1-5)' %>
<%= f.number_field :happiness %>
<%= f.label 'How nauseous are you? (1-5 scale)' %>
<%= f.number_field :nausea %>
<%= f.label 'How many dollars are in your pocket?' %>
<%= f.number_field :tickets %>
<%= f.label 'Check this box if you are a theme park owner' %>
<%= f.check_box :admin %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit %>
<% end %>